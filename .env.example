# ==============================================
# KINHELP API - Production Environment Template
# ==============================================
# Copier ce fichier en .env et remplir les valeurs

# ==============================================
# DATABASE
# ==============================================
DATABASE_URL=postgresql://user:VOTRE_MOT_DE_PASSE_FORT@localhost:5432/kinhelp

# ==============================================
# JWT - IMPORTANT: Générer un secret unique !
# Commande: openssl rand -base64 64
# ==============================================
JWT_SECRET=CHANGER_AVEC_UN_SECRET_DE_64_CARACTERES_MINIMUM

# ==============================================
# APPLICATION
# ==============================================
NODE_ENV=production
PORT=3000

# ==============================================
# CORS - URLs autorisées (séparées par des virgules)
# ==============================================
FRONTEND_URL=https://kinhelp.com
ADMIN_URL=https://admin.kinhelp.com

# ==============================================
# BREVO (Email Service)
# ==============================================
BREVO_API_KEY=votre-cle-api-brevo
BREVO_SENDER_EMAIL=noreply@kinhelp.com
BREVO_SENDER_NAME=Kinhelp

# ==============================================
# GOOGLE OAUTH (Optionnel)
# ==============================================
GOOGLE_CLIENT_ID=votre-client-id
GOOGLE_CLIENT_SECRET=votre-client-secret
GOOGLE_CALLBACK_URL=https://api.kinhelp.com/auth/google/callback

# ==============================================
# REDIS (Optionnel - pour le cache)
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
